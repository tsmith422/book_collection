{
    "stack": "heroku-24",
    "environments": {
        "review": {
            "addons": [
                "heroku-postgresql:in-dyno"
            ],
            "env": {
                "RAILS_ENV": "review",
                "DISABLE_DATABASE_ENVIRONMENT_CHECK": "1"
            },
            "scripts": {
                "postdeploy": "bundle exec rails db:schema:load && yarn build && yarn build:css"
            }
        }
    },
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        },
        {
            "url": "heroku/ruby"
        }
    ],
    "env": {
        "RAILS_LOG_TO_STDOUT": "1",
        "RAILS_SERVE_STATIC_FILES": "true",
        "NODE_ENV": "production",
        "YARN_PRODUCTION": "true"
    },
    "addons": [
        "heroku-postgresql:in-dyno"
    ]
}